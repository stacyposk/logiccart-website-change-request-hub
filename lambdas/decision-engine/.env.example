# LogicCart Bedrock Agent Environment Variables (FREE TIER)
# Copy this to .env for local development

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=YOUR_AWS_ACCOUNT_ID

# Bedrock Configuration (FREE TIER OPTIMIZED)
BEDROCK_MODEL=amazon.nova-lite-v1:0
BEDROCK_REGION=us-east-1
MAX_TOKENS=2048
TEMPERATURE=0.1
TOP_P=0.9

# DynamoDB Tables
TICKETS_TABLE=tickets

# S3 Buckets
POLICY_BUCKET=YOUR_POLICY_BUCKET_NAME
UPLOADS_BUCKET=YOUR_UPLOADS_BUCKET_NAME
POLICY_FILE_KEY=YOUR_POLICY.md

# SNS Configuration
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:YOUR_ACCOUNT_ID:YOUR_TOPIC_NAME

# Lambda Configuration (FREE TIER OPTIMIZED)
LAMBDA_MEMORY_MB=512
LAMBDA_TIMEOUT=60
LOG_LEVEL=INFO

# Free Tier Limits (Daily)
MAX_DAILY_REQUESTS=50
MAX_DAILY_BEDROCK_CALLS=10
MAX_DAILY_DDB_READS=100
MAX_DAILY_DDB_WRITES=50