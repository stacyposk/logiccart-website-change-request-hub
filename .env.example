# AWS Production Deployment Environment Variables
# Copy this file to .env.local and fill in your actual values

# API Gateway Configuration
NEXT_PUBLIC_API_BASE=https://your-api-gateway-id.execute-api.region.amazonaws.com
NEXT_PUBLIC_GET_UPLOAD_URL_PATH=/api/upload-url
NEXT_PUBLIC_CREATE_TICKET_PATH=/api/tickets
NEXT_PUBLIC_GET_DASHBOARD_PATH=/api/dashboard
NEXT_PUBLIC_GET_TICKETS_PATH=/api/tickets
NEXT_PUBLIC_AI_PREVIEW_PATH=/api/ai-preview

# Cognito Authentication Configuration
NEXT_PUBLIC_COGNITO_USER_POOL_ID=region_XXXXXXXXX
NEXT_PUBLIC_COGNITO_CLIENT_ID=your-cognito-client-id-here
NEXT_PUBLIC_COGNITO_DOMAIN=your-cognito-domain.auth.region.amazoncognito.com
NEXT_PUBLIC_COGNITO_REDIRECT_URI_DEV=http://localhost:3000/auth/callback
NEXT_PUBLIC_COGNITO_REDIRECT_URI_PROD=https://your-cloudfront-domain.cloudfront.net/auth/callback
NEXT_PUBLIC_COGNITO_LOGOUT_URI_DEV=http://localhost:3000/
NEXT_PUBLIC_COGNITO_LOGOUT_URI_PROD=https://your-cloudfront-domain.cloudfront.net/

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://your-cloudfront-domain.cloudfront.net

# AWS Deployment Configuration (for deployment scripts)
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-frontend-bucket
CLOUDFRONT_DISTRIBUTION_ID=YOUR_DISTRIBUTION_ID
CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# File Upload Configuration
NEXT_PUBLIC_MAX_UPLOAD_MB=3